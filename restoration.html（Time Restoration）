document.getElementById('daysPassed').textContent=daysPassed.toLocaleString()+'æ—¥';
document.getElementById('timePhase').textContent=phases[phaseIndex];
document.getElementById('destinyNumber').textContent=destinyNum;

// è¦ç´ è¡¨ç¤º
document.getElementById('timelineDisplay').classList.add('active');
document.getElementById('restoreContainer').classList.add('active');

// åˆ†æç”Ÿæˆ
