const today=new Date();
const daysPassed=Math.floor((today-birthDate)/(1000*60*60*24));

// é‹å‘½æ•°è¨ˆç®—
const destinyNum=(y+m+d)%9+1;

// ä½ç›¸è¨ˆç®—
const phases=['å‰µé€ ','ç ´å£Š','å†ç”Ÿ','è¦šé†’'];
