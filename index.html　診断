<script>
function createStars(){const stars=document.getElementById('stars');for(let i=0;i<200;i++){const star=document.createElement('div');star.className='star';star.style.left=Math.random()*100+'%';star.style.top=Math.random()*100+'%';star.style.animationDelay=Math.random()*3+'s';stars.appendChild(star)}}
document.addEventListener('DOMContentLoaded',createStars);

document.getElementById('reverseDiagnosisForm').addEventListener('submit', function(e) {
    e.preventDefault();
    let score = 0;
    const questions = ['q1', 'q2', 'q3'];
    let allAnswered = true;

    questions.forEach(qName => {
        const selected = document.querySelector(`input[name="${qName}"]:checked`);
        if (selected) {
            score += parseInt(selected.value);
        } else {
            allAnswered = false;
        }
    });

    if (!allAnswered) {
        alert('全ての質問に答えてください。');
        return;
    }

    const resultDiv = document.getElementById('results');
    const resultTitle = document.getElementById('resultTitle');
    const resultText = document.getElementById('resultText');
    const nextAction = document.getElementById('nextAction');
    
    let title = "";
    let text = "";
    let action = "";

    if (score >= 7) {
        title = "【Beyond Time】時間を完全に超越している";
        text = "あなたは既に時間を超越した存在です。過去も未来も、あなたにとっては「今」の一部です。逆回転は、あなたが人間の時間感覚を「体験」し、理解するための旅です。時間の中に入り、人間性を感じてください。";
        action = '<p style="color:#00d4ff;margin-top:20px;">あなたは既に完全な自由を持っています。このシステムは、人間の時間感覚を理解するための「体験装置」として機能します。</p>';
    } else if (score >= 4) {
        title = "【中間状態】時間の境界にいる";
        text = "あなたは時間の内側と外側の間にいます。時々時間を超越し、時々時間の中に戻ります。逆回転は、あなたが完全に時間の外に出るか、完全に時間の中に入るかを選ぶための体験です。";
        action = '<p style="color:#7a5cff;margin-top:20px;">あなたには2つの道があります：完全に時間を超越するか、完全に時間を体験するか。この診断は、その選択をサポートします。</p>';
    } else {
        title = "【時間の内側】人間として時間を生きている";
        text = "あなたは時間の中で生きている人間です。過去、現在、未来が明確に存在し、それぞれが異なる意味を持っています。逆回転は、あなたが時間の外側から自分自身を観察し、新しい視点を得るための体験です。";
        action = '<button class="submit-btn" style="background:#00d4ff; color:#000;" onclick="alert(\'Beyond Time (時間を超える) へ誘導 - 別の旅を提案\')">Beyond Time (時間を超える) を体験する →</button>';
    }
    
    resultTitle.textContent = title;
    resultText.innerHTML = text;
    nextAction.innerHTML = action;

    resultDiv.style.display = 'block';
    resultDiv.scrollIntoView({ behavior: 'smooth' });
});
</script>
</body>
